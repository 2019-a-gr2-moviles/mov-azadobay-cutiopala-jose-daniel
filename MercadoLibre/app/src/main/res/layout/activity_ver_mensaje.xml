<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VerMensaje" android:background="#FFFFFF">

    <TextView
            android:text="TextView"
            android:layout_width="321dp"
            android:layout_height="41dp"
            android:id="@+id/txt_contenido2"
            app:layout_constraintTop_toBottomOf="@+id/txt_nombre1"
            app:layout_constraintStart_toStartOf="@+id/txt_nombre1"
            app:layout_constraintEnd_toEndOf="@+id/txt_nombre1"/>
    <TextView
            android:text="TextView"
            android:layout_width="294dp"
            android:layout_height="0dp"
            android:id="@+id/txt_nombre1"
            android:textStyle="bold" android:textColor="#000000" android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/img_anuncio" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="267dp"
            android:layout_height="46dp"
            android:id="@+id/txt_contenido"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_contenido2"
            app:layout_constraintStart_toStartOf="@+id/txt_contenido2"
            app:layout_constraintEnd_toEndOf="@+id/txt_contenido2"/>
    <ImageView
            android:layout_width="388dp"
            android:layout_height="438dp" app:srcCompat="@mipmap/samsung"
            android:id="@+id/img_anuncio"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:text="Mercado Libre"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:background="#FFC107" android:textSize="24sp"
            android:gravity="center"/>
</android.support.constraint.ConstraintLayout>