<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VerMensaje" android:background="#FFFFFF">

    <TextView
            android:text="TextView"
            android:layout_width="321dp"
            android:layout_height="41dp"
            android:id="@+id/txt_contenido2"
            app:layout_constraintTop_toBottomOf="@+id/txt_nombre1"
            app:layout_constraintStart_toStartOf="@+id/txt_nombre1"
            app:layout_constraintEnd_toEndOf="@+id/txt_nombre1" android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.518" android:textSize="18sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="321dp"
            android:layout_height="72dp"
            android:id="@+id/txt_nombre1"
            android:textStyle="bold" android:textColor="#000000" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/img_anuncio" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
    />
    <TextView
            android:text="TextView"
            android:layout_width="267dp"
            android:layout_height="46dp"
            android:id="@+id/txt_contenido"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_contenido2"
            app:layout_constraintStart_toStartOf="@+id/txt_contenido2"
            app:layout_constraintEnd_toEndOf="@+id/txt_contenido2" app:layout_constraintHorizontal_bias="0.0"
            android:textSize="18sp"/>
    <ImageView
            android:layout_width="388dp"
            android:layout_height="438dp" app:srcCompat="@mipmap/samsung"
            android:id="@+id/img_anuncio"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Comprar"
            android:layout_width="181dp"
            android:layout_height="58dp"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
</android.support.constraint.ConstraintLayout>