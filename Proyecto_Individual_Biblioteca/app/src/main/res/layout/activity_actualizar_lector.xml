<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Lectores.ActualizarLector">

    <TextView
            android:text="Actualizar Lector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19" android:textStyle="bold"
            android:textAllCaps="true" android:textSize="24sp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <TextView
            android:text="@string/nombre_cliente"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/textView20"
            app:layout_constraintTop_toBottomOf="@+id/textView19" android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:textStyle="bold"/>
    <TextView
            android:text="@string/apellido_cliente"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/textView21" app:layout_constraintStart_toStartOf="@+id/textView20"
            app:layout_constraintEnd_toEndOf="@+id/textView20" app:layout_constraintTop_toBottomOf="@+id/textView20"
            android:layout_marginTop="28dp" app:layout_constraintHorizontal_bias="0.0" android:textStyle="bold"/>
    <TextView
            android:text="@string/cedula_cliente"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/textView22" app:layout_constraintStart_toStartOf="@+id/textView21"
            app:layout_constraintEnd_toEndOf="@+id/textView21" app:layout_constraintTop_toBottomOf="@+id/textView21"
            android:layout_marginTop="20dp" app:layout_constraintHorizontal_bias="0.0" android:textStyle="bold"/>
    <EditText
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_actualizarNombre"
            app:layout_constraintTop_toTopOf="@+id/textView20" app:layout_constraintStart_toEndOf="@+id/textView20"
            android:layout_marginStart="20dp" android:layout_marginLeft="20dp"/>
    <EditText
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_actualizarApellido"
            app:layout_constraintStart_toStartOf="@+id/txt_actualizarNombre"
            app:layout_constraintEnd_toEndOf="@+id/txt_actualizarNombre" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_actualizarNombre" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_actualizarCedual"
            app:layout_constraintStart_toStartOf="@+id/txt_actualizarApellido"
            app:layout_constraintEnd_toEndOf="@+id/txt_actualizarApellido" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_actualizarApellido" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="@string/actualizar"
            android:layout_width="201dp"
            android:layout_height="45dp"
            android:id="@+id/btn_actualizarLector"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:textStyle="bold"
            tools:layout_editor_absoluteY="399dp"/>
    <TextView
            android:text="id"
            android:layout_width="95dp"
            android:layout_height="37dp"
            android:id="@+id/textView9" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView22" app:layout_constraintStart_toStartOf="@+id/textView22"
            app:layout_constraintEnd_toEndOf="@+id/textView22" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="176dp"
            android:layout_height="48dp"
            android:id="@+id/txt_actualizarId" app:layout_constraintStart_toStartOf="@+id/txt_actualizarCedual"
            app:layout_constraintEnd_toEndOf="@+id/txt_actualizarCedual" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_actualizarCedual"
            app:layout_constraintHorizontal_bias="0.574"/>
</androidx.constraintlayout.widget.ConstraintLayout>