<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Libros.Actualizar_Libro">

    <TextView
            android:text="Actualizar Libro"
            android:layout_width="216dp"
            android:layout_height="34dp"
            android:id="@+id/textView" android:textStyle="bold"
            android:textAllCaps="true" android:gravity="center" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.497" android:textSize="18sp"/>
    <TextView
            android:text="id Libro"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="48dp"
            android:textStyle="bold" android:textAllCaps="true" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"/>
    <TextView
            android:text="Título"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/textView2" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintHorizontal_bias="0.0"
            android:textStyle="bold" android:textAllCaps="true"/>
    <TextView
            android:text="Autor"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/textView3" app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="15dp" app:layout_constraintHorizontal_bias="0.0" android:textStyle="bold"
            android:textAllCaps="true"/>
    <TextView
            android:text="Editorial"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/textView5" app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/textView4" app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="0.0" android:textStyle="bold"
            android:textAllCaps="true"/>
    <TextView
            android:text="Número de Edición"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/textView6" app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="@+id/textView5" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintHorizontal_bias="0.0"
            android:textStyle="bold" android:textAllCaps="true"/>
    <TextView
            android:text="Stock"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/textView7" app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="@+id/textView6" app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginTop="15dp" app:layout_constraintHorizontal_bias="0.0" android:textStyle="bold"
            android:textAllCaps="true"/>
    <TextView
            android:text="TextView"
            android:layout_width="230dp"
            android:layout_height="34dp"
            android:id="@+id/txt_actualizarId" app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <EditText
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_actualizarActor"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_actual"
            app:layout_constraintStart_toStartOf="@+id/txt_actual" app:layout_constraintEnd_toEndOf="@+id/txt_actual"/>
    <EditText
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_actualizarEditorial"
            app:layout_constraintStart_toStartOf="@+id/txt_actualizarActor"
            app:layout_constraintEnd_toEndOf="@+id/txt_actualizarActor"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/txt_actualizarActor"
            app:layout_constraintHorizontal_bias="0.176"/>
    <EditText
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_actualizarNumeroEditorial"
            app:layout_constraintStart_toStartOf="@+id/txt_actualizarEditorial"
            app:layout_constraintEnd_toEndOf="@+id/txt_actualizarEditorial"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/txt_actualizarEditorial"
            app:layout_constraintHorizontal_bias="0.176"/>
    <EditText
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_actualizarStock"
            app:layout_constraintStart_toStartOf="@+id/txt_actualizarNumeroEditorial"
            app:layout_constraintEnd_toEndOf="@+id/txt_actualizarNumeroEditorial"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_actualizarNumeroEditorial"/>
    <Button
            android:text="Actualizar Libro"
            android:layout_width="202dp"
            android:layout_height="45dp"
            android:id="@+id/btn_actualizarLibro" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_actualizarStock" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:textStyle="bold"
            android:textAllCaps="true"/>
    <EditText
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_actual"
            app:layout_constraintStart_toStartOf="@+id/txt_actualizarId"
            app:layout_constraintEnd_toEndOf="@+id/txt_actualizarId" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_actualizarId"/>






</androidx.constraintlayout.widget.ConstraintLayout>