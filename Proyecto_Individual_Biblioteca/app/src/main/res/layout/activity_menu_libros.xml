<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Libros.MenuLibros" android:background="@drawable/fondolib">

    <Button
            android:text="@string/nuevoLibro"
            android:layout_width="232dp"
            android:layout_height="65dp"
            android:id="@+id/btn_nuevoLibro"
            app:layout_constraintStart_toStartOf="@+id/btn_consultar_libros"
            app:layout_constraintEnd_toEndOf="@+id/btn_consultar_libros" app:layout_constraintHorizontal_bias="0.285"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/btn_consultar_libros"
            android:textStyle="bold" android:textAllCaps="true" android:textSize="18sp" android:textAlignment="center"/>
    <Button
            android:text="@string/verLibros"
            android:layout_width="224dp"
            android:layout_height="61dp"
            android:id="@+id/btn_consultar_libros" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.859"
            android:layout_marginTop="208dp" app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold" android:textAlignment="center" android:textSize="18sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>