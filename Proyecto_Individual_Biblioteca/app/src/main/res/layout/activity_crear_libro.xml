<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Libros.CrearLibro">

    <EditText
            android:layout_width="371dp"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_stock"
            android:hint="Stock"
            app:layout_constraintStart_toStartOf="@+id/txt_numeroEdicion"
            app:layout_constraintEnd_toEndOf="@+id/txt_numeroEdicion" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_numeroEdicion" app:layout_constraintHorizontal_bias="0.2"/>
    <EditText
            android:layout_width="371dp"
            android:layout_height="44dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_numeroEdicion"
            android:hint="Número de Edición"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/txt_editorial"
            app:layout_constraintStart_toStartOf="@+id/txt_editorial"
            app:layout_constraintEnd_toEndOf="@+id/txt_editorial" app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:layout_width="374dp"
            android:layout_height="52dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_editorial"
            android:hint="Editorial"
            app:layout_constraintStart_toStartOf="@+id/txt_autor"
            app:layout_constraintEnd_toEndOf="@+id/txt_autor" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_autor" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="376dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_autor"
            android:hint="Autor"
            app:layout_constraintStart_toStartOf="@+id/txt_actualizarTitulo"
            app:layout_constraintEnd_toEndOf="@+id/txt_actualizarTitulo" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/txt_actualizarTitulo"/>
    <EditText
            android:layout_width="374dp"
            android:layout_height="54dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_actualizarTitulo"
            android:layout_marginTop="60dp" app:layout_constraintTop_toTopOf="parent"
            android:hint="Título" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.619"/>
    <Button
            android:text="@string/ingresar"
            android:layout_width="274dp"
            android:layout_height="48dp"
            android:id="@+id/btn_nuevoLibro"
            android:background="#C8C98D2A"
            app:layout_constraintStart_toStartOf="@+id/txt_stock"
            app:layout_constraintEnd_toEndOf="@+id/txt_stock" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_stock" app:layout_constraintHorizontal_bias="0.494"
            android:textStyle="bold|italic" android:textAlignment="center" android:textAllCaps="true"
            android:textSize="18sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>