<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Lectores.CrearLector">

    <EditText
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_ingresarNombreCliente" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.488"
            android:hint="@string/nombre_cliente"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_ingresarApellidoLector"
            app:layout_constraintEnd_toEndOf="@+id/txt_ingresarNombreCliente" app:layout_constraintStart_toStartOf="@+id/txt_ingresarNombreCliente"
            android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/txt_ingresarNombreCliente"
            app:layout_constraintHorizontal_bias="0.0" android:hint="@string/apellido_cliente"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_ingresarCedulaLector"
            app:layout_constraintStart_toStartOf="@+id/txt_ingresarApellidoLector" app:layout_constraintEnd_toEndOf="@+id/txt_ingresarApellidoLector"
            android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/txt_ingresarApellidoLector"
            app:layout_constraintHorizontal_bias="0.0" android:hint="@string/cedula_cliente"/>
    <Button
            android:text="Ingresar Lector"
            android:layout_width="207dp"
            android:layout_height="52dp"
            android:id="@+id/btn_ingresarLector" app:layout_constraintStart_toStartOf="@+id/txt_ingresarCedulaLector"
            app:layout_constraintEnd_toEndOf="@+id/txt_ingresarCedulaLector" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_ingresarCedulaLector" app:layout_constraintHorizontal_bias="0.502"/>
</androidx.constraintlayout.widget.ConstraintLayout>