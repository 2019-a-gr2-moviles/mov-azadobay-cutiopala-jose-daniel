<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#9FC98D2A">
    <Button
            android:text="@string/txt_libros"
            android:layout_width="220dp"
            android:layout_height="189dp"
            android:id="@+id/btn_libros"
            android:background="@drawable/libros2" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.497" android:gravity="bottom|center" android:textStyle="bold"
            android:textAllCaps="true" android:textSize="18sp"/>
    <Button
            android:layout_width="220dp"
            android:layout_height="178dp"
            android:id="@+id/btn_solicitudes" android:background="@drawable/reserva"
            app:layout_constraintStart_toStartOf="@+id/btn_libros"
            app:layout_constraintEnd_toEndOf="@+id/btn_libros" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_libros" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="@string/txt_lector"
            android:layout_width="219dp"
            android:layout_height="137dp"
            android:id="@+id/btn_lectores" android:background="@drawable/lectordos"
            app:layout_constraintStart_toStartOf="@+id/btn_solicitudes"
            app:layout_constraintEnd_toEndOf="@+id/btn_solicitudes" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_solicitudes" app:layout_constraintHorizontal_bias="1.0"
            android:gravity="left" android:textStyle="bold" android:textAllCaps="true" android:textSize="18sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>